local tweenService = game:GetService("TweenService")

local function tweenModel(model, CF)
    local TweenPlay = (CF.Position - game.Players.LocalPlayer.Character.HumanoidRootPart.Position).Magnitude
    local info = TweenInfo.new(TweenPlay, Enum.EasingStyle.Linear)
    local CFrameValue = Instance.new("CFrameValue")
    CFrameValue.Value = model:GetPrimaryPartCFrame()

    CFrameValue:GetPropertyChangedSignal("Value"):Connect(function()
        model:SetPrimaryPartCFrame(CFrameValue.Value)
    end)

    local tween = tweenService:Create(CFrameValue, info, {Value = CF})
    tween:Play()

    tween.Completed:Connect(function()
        CFrameValue:Destroy()
    end)
end

local boatsFolder = game:GetService("Workspace").Boats
for _, model in pairs(boatsFolder:GetChildren()) do
    if model:IsA("Model") then
        tweenModel(model, game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame)
    end
end
